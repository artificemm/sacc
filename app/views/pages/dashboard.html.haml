%div{class: "dashboard grey lighten-3 ng-scope"}
  .row.no-gutter
    %div{class: "col-sm-12 col-md-12 col-lg-9", style: "background:#F9F9F9;"}
      %div{class: "p-20 clearfix"}
        %div{class: "pull-right"}
          = link_to(new_client_path, class: "btn btn-round-sm btn-link ng-scope", "bs-tooltip" => :true, title: "New client") do
            %i{class: "md md-person-add"}
        %h4{class: "grey-text"}
          %i{class: 'md md-dashboard'}
          %span.hidden-xs
            My Dashboard, 
            = today_helper
        %h6{class: "grey-text"}
          %span
            = @new_clients.length
            new clients today
            ,
            = @today_interactions.length
            new interactions today
      .card
        %table.table.striped.clients
          %tr
            %th Client
            %th Interactions
            %th Appointments
            %th Actions
          = render partial: 'clients/client', collection: @my_clients, client: :client
        = paginate @my_clients
    %div{class: "col-lg-3 col-md-12"}
      %div{class: 'p-20'}
        %h4{class: "grey-text m-b-30"} My Appointments
        %div{role: 'tabpanel'}
          %ul{class: "nav nav-tabs", role: "tablist", ng: {init: "actionTab=1"}}
            %li= link_to 'Today', appointments_path(type_list: 'today'), "ng-click" => "actionTab=1", "aria-controls" => "home", role: "tab", data: {toggle: "tab"}, "aria-expanded" => "false", remote: true
            %li= link_to 'Upcoming', appointments_path(type_list: 'upcoming'),remote: true
            %li= link_to 'Previous', appointments_path(type_list: 'previous'),remote: true
            %li= link_to 'All', appointments_path(type_list: 'all'),remote: true
        / = render partial: 'appointments/appointments', locals: { appointments: (Appointment.today_from current_user.appointments) }
