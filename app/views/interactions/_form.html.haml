= simple_form_for(@interaction) do |f|
  = f.error_notification

  .form-inputs

    = f.input :kind, collection: Interaction::KINDS
    = f.input :date, as: :string, input_html: { class: :datepicker }
    = f.input :time
    = f.input :mood
    = f.input :interest
    %ui-select{ng: {model: "person.selected"}, theme: "select2", title: true}
    = f.input :notes, input_html: { class: 'materialize-textarea' }

    = f.input :client_id,as: :hidden, input_html: { value: params[:client_id] }
  .form-actions
    = f.button :submit
