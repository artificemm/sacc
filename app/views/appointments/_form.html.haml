= simple_form_for(@appointment) do |f|
  = f.error_notification

  .form-inputs
    = f.input :date, as: :string, input_html: { class: :datepicker}
    = f.input :time
    = f.input :notes,input_html: {class: 'materialize-textarea'}
    = f.input :status, collection: Appointment::STATUS
    = f.input :mood
    = f.input :interest

  .form-actions
    = f.button :submit
