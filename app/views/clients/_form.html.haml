= simple_form_for(@client)  do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :paternal_lastname
    = f.input :maternal_lastname
    = f.input :gender, as: :select, collection: ApplicationHelper.get_gender_dropdown
    = f.input :marital_status, collection: Client::MARITAL_STATUS
    = f.input :spouse
    = f.input :birthdate,order: [:day,:month, :year]
    = f.input :mail
    = f.input :notes, input_html: {class: 'materialize-textarea'}
    #phones
      %b Phones
      =  f.simple_fields_for :phones do |phone|
        = render 'phone_fields', f: phone
      .links{style: 'display: inline;'}
        = link_to_add_association 'Add phone', f, :phones, class: 'btn'
    #addresses
      %b Addresses
      = f.simple_fields_for :addresses do |address|
        = render 'address_fields', f: address
      .links
        = link_to_add_association 'Add address', f, :addresses, class: 'btn'

  .form-actions
    = f.button :submit
