.card.z-depth-3
  .card-content
    %span.card-title.black-text
      = @client.fullname
    %p
      %b Spouse:
      = @client.spouse
    %p
      %b Birthdate:
      = @client.birthdate
    %p
      %b Mail:
      = @client.mail
    %p
      %b Notes:
      = @client.notes
    %p
      %b Current salesman:
      = @client.salesman.fullname
    %p
      = render 'show_phones'
  .card-action
    = link_to 'Interaction', interactions_path(client_id: @client.id)
    = link_to 'Appointment', new_appointment_path(client_id: @client.id)
    = link_to 'Edit', edit_client_path(@client)
