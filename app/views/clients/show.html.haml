      = @client.spouse
    %p
      %b Birthdate:
      = @client.birthdate
    %p
      %b Mail:
      = @client.mail
    %p
      %b Notes:
      = @client.notes
    %p
      %b Current salesman:
      = @client.salesman.fullname
    %p
      = render 'show_phones'
    %p
      = render 'show_directions'
