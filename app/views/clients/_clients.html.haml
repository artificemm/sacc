%tr
  %td= client.status
  %td= link_to name_decorator(client), client
  %td
    / # = [client.main_phone.kind, client.main_phone.number].join(", ") #falta poner el telefono como default
  %td= client.mail
  %td= client.interactions.size
  %td= client.appointments.size
  %td
    = link_to nil, class: 'btn btn-round-sm btn-link ng-scope' do
      %i{class: "md md-message"}
    = link_to edit_client_path(client), class: 'btn btn-round-sm btn-link ng-scope' do
      %i{class: "md md-mode-edit"}
    = link_to new_negociation_path(client: client), class: 'btn btn-round-sm btn-link ng-scope' do
      %i{class: "md md-attach-money"}
