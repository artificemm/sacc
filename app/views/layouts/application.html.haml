!!! 5
%html{:lang => "en", ng: {app: 'materialism'}}
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %meta(name="theme-color" content="#EE6E73")
    %link(href="http://fonts.googleapis.com/css?family=Inconsolata" rel="stylesheet" type="text/css")
    %title= content_for?(:title) ? yield(:title) : "SACC :: Burdeos Residencial"
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag 'favicon.png', :rel => 'shortcut icon'
    = javascript_include_tag "application"


  %body.theme-template-dark.theme-cyan
    %main
      = render partial: 'common/side_nav'
      .main-container
        = render partial: 'common/top_bar'
        .main-content.ng-scope
          = b_flash
          = yield